<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/uploadbulanan"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/uploadbulanan"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/namabln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap :"
            android:textColor="@color/colorLightYellow"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/nisbln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nis :"
            android:textColor="@color/colorLightYellow"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/kelasbln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas :"
            android:textColor="@color/colorLightYellow"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tanggalbln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal :"
            android:textColor="@color/colorLightYellow"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/bulanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulanan :"
            android:textColor="@color/colorLightYellow"
            tools:ignore="MissingConstraints" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>